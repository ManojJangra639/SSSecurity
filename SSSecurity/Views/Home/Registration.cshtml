@{
    ViewData["Title"] = "Registration";
}

@model User

<form id="createUser" action="/home/Registration" method="post">
    <div class="d-flex row">
        <div class="col-md-6">
            <label asp-for="PostName" class="form-label">Post name</label>
            <select asp-for="PostName" class="form-control form-select">
                <option value="Manager">Manager</option>
                <option value="Assistant Manager">Assistant Manager</option>
                <option value="Security Guard">Security Guard</option>
            </select>
            <span asp-validation-for="PostName" class="text-danger"></span>
        </div>
        <div>Nearest Post Locations</div>
        <div class="col-md-4">
            <label asp-for="NearestPostLocation1" class="form-label"></label>
            <input asp-for="NearestPostLocation1" type="text" class="form-control" />
            <span asp-validation-for="NearestPostLocation1" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="NearestPostLocation2" class="form-label"></label>
            <input asp-for="NearestPostLocation2" type="text" class="form-control" />
            <span asp-validation-for="NearestPostLocation2" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="NearestPostLocation3" class="form-label"></label>
            <input asp-for="NearestPostLocation3" type="text" class="form-control" />
            <span asp-validation-for="NearestPostLocation3" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" type="text" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label class="form-label" asp-for="LastName"></label>
            <input type="text" asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="PhoneNumber">Phone</label>
            <input type="number" asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="AdhaarCardNumber">Adhaar Card</label>
            <input type="number" asp-for="AdhaarCardNumber" class="form-control" />
            <span asp-validation-for="AdhaarCardNumber" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="PanCardNumber">Pan Card</label>
            <input type="test" asp-for="PanCardNumber" class="form-control" />
            <span asp-validation-for="PanCardNumber" class="text-danger"></span>
        </div>

        <div class="col-md-10">
            <label class="form-label" asp-for="PermanentAddress">Permanent Address</label>
            <input type="text" asp-for="PermanentAddress" class="form-control" />
            <span asp-validation-for="PermanentAddress" class="text-danger"></span>
        </div>

        <div class="col-md-2">
            <label class="form-label" asp-for="Village"></label>
            <input type="number" asp-for="Village" class="form-control" />
            <span asp-validation-for="Village" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" asp-for="PostOffice"></label>
            <input type="number" asp-for="PostOffice" class="form-control" />
            <span asp-validation-for="PostOffice" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" asp-for="District"></label>
            <input type="number" asp-for="District" class="form-control" />
            <span asp-validation-for="District" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" asp-for="State"></label>
            <input type="number" asp-for="State" class="form-control" />
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" asp-for="PinCode">Pin Code</label>
            <input type="number" asp-for="PinCode" class="form-control" />
            <span asp-validation-for="PinCode" class="text-danger"></span>
        </div>

        <div class="col-md-10">
            <label class="form-label" asp-for="CurrentAddress">Current Address</label>
            <input type="text" asp-for="CurrentAddress" class="form-control" />
        </div>

        <div class="col-md-2">
            <label class="form-label" asp-for="Village2"></label>
            <input type="number" asp-for="Village2" class="form-control" />
            <span asp-validation-for="Village2" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" asp-for="PostOffice2"></label>
            <input type="number" asp-for="PostOffice2" class="form-control" />
            <span asp-validation-for="PostOffice2" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" asp-for="District2"></label>
            <input type="number" asp-for="District" class="form-control" />
            <span asp-validation-for="District2" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" asp-for="State2"></label>
            <input type="number" asp-for="State2" class="form-control" />
            <span asp-validation-for="State2" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label class="form-label" asp-for="PinCode2">Current Pin Code</label>
            <input type="number" asp-for="PinCode2" class="form-control" />
        </div>
        <div class="text-end">
            <button type="submit" id="registration" class="btn btn-primary my-4">Next</button>
        </div>
        <span id="errorSection" class="d-none text-danger"></span>
    </div>
</form>
